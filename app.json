{
  "expo": {
    "name": "VideoChait",
    "slug": "video-chat-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#1F232B"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.benjaminhrose.chait",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan barcodes on event tickets.",
        "NSMicrophoneUsageDescription": "Microphone permission description",
        "UIBackgroundModes": ["audio"],
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your speech to text."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#1F232B"
      },
      "package": "com.benjaminhrose.chait",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_NETWORK_STATE",
        "CHANGE_NETWORK_STATE",
        "MODIFY_AUDIO_SETTINGS",
        "INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "7aa0077d-36af-406f-819f-c6258822a50a"
      }
    }
  },
  "plugins": [
    "@config-plugins/react-native-webrtc",
    "@react-native-voice/voice"
  ]
}
